@page "/404"

<PageTitle>404 - Siden finnes ikke | Urso</PageTitle>

<section class="not-found-hero">
    <div class="container">
        <div class="not-found-content">
            <div class="not-found-visual">
                <div class="error-code">404</div>
                <div class="bear-illustration">
                    <div class="bear-head">
                        <div class="bear-ears">
                            <div class="ear left"></div>
                            <div class="ear right"></div>
                        </div>
                        <div class="bear-face">
                            <div class="eyes">
                                <div class="eye left">
                                    <div class="pupil"></div>
                                </div>
                                <div class="eye right">
                                    <div class="pupil"></div>
                                </div>
                            </div>
                            <div class="snout">
                                <div class="nose"></div>
                            </div>
                        </div>
                    </div>
                    <div class="code-brackets">
                        <span class="bracket left">&lt;</span>
                        <span class="bracket right">/&gt;</span>
                    </div>
                </div>
            </div>
            
            <div class="not-found-text">
                <h1>Oops! Denne siden finnes ikke</h1>
                <p class="lead">
                    Det ser ut som du har navigert til en side som ikke eksisterer. 
                    Ikke bekymre deg - selv de beste koderne går seg vill av og til!
                </p>
                <p>
                    La oss hjelpe deg å finne veien tilbake til trygg grunn.
                </p>
                
                <div class="not-found-actions">
                    <a href="/" class="btn btn-primary">
                        <span class="btn-icon">🏠</span>
                        Gå til forsiden
                    </a>
                    <a href="/contact" class="btn btn-secondary">
                        <span class="btn-icon">💬</span>
                        Kontakt oss
                    </a>
                </div>
                
                <div class="helpful-links">
                    <h3>Eller prøv en av disse sidene:</h3>
                    <ul>
                        <li><a href="/services">Våre tjenester</a></li>
                        <li><a href="/about">Om Urso</a></li>
                        <li><a href="/contact">Kontakt oss</a></li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="tech-pattern">
            <div class="pattern-dot"></div>
            <div class="pattern-dot"></div>
            <div class="pattern-dot"></div>
            <div class="pattern-line"></div>
            <div class="pattern-line"></div>
        </div>
    </div>
</section>
